<div class="page-header"><h1>Upload Photo</h1></div>

<%= form_for @attachement, html: { multipart: true } do |f| %>
  <% if @attachement.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@attachement.errors.count, "error")} prohibited this attachement from being saved:" %>
      </h2>
      <ul>
        <% @attachement.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
	    <%= f.submit 'Upload document', class: 'btn btn-default' %>
	</div>
<% end %>