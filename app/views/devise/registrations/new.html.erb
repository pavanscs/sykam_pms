<div class="container-fluid">
  <div class= "row">
    <div class="col-md-1 col-sm-1 col-xs-12"></div>
    <div class="col-md-10 col-sm-10 col-xs-12" style="background-color:rgba(138, 245, 234, 0.4); ">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2>Sign up</h2>
        <center> <%= image_tag("0.png", style: 'width: 10%;') %></center><br>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class= "container-fluid row">
          <div class="col-md-6 col-lg-6 col-xs-12">
            <div class="form-group">
              <%= f.label :first_name, 'First Name' %>
              <%= f.text_field :first_name, autocomplete: "first_name", placeholder: "First Name", class: "form-control",style: 'width: 100%'%>
            </div>
            <div class="form-group">
              <%= f.label :user_name, 'User Name' %>
              <%= f.text_field :user_name, autocomplete: "user_name", placeholder: "User Name", class: "form-control",style: 'width: 100%'%>
            </div>
            <div class="form-group">
              <%= f.label :password, 'Password' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control",style: 'width: 100%' %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, 'Confirm_Password' %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "confirm Password", class: "form-control",style: 'width: 100%' %>
            </div>
            <div class="form-group">
              <%= f.label :gender, 'Gender' %>:<br>
              <%= f.radio_button :gender, "male",{:checked => true} %>
              <%= f.label_tag(:male, "Male") %>
              <%= f.radio_button :gender, "female" %>
              <%= f.label_tag(:female, "Female") %>
            </div>
          </div>
          <div class="col-md-6 col-lg-6 col-xs-12">
            <div class="form-group">
              <%= f.label :last_name, 'Last Name' %>:
              <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control",style: 'width: 100%'  %>
            </div>
            <div class="form-group">
              <%= f.label :email, 'Email' %>
              <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control",style: 'width: 100%' %>
            </div>
            <div class="form-group">
              <%= f.label :mobile, 'Mobile No' %>
              <%= f.telephone_field :mobile, placeholder: "Phone", class: "form-control",style: 'width: 100%'  %>
            </div>
            <div class="form-group">
              <%= f.label :date_of_birth, 'Date of birth' %>:<br>
              <%= f.date_field :date_of_birth, class: 'form-control',style: 'width: 100%' %>
            </div> 
            <div class="form-group">
              <%= f.label :organization_id, 'Organization' %>
              <%= f.fields_for :organization do |org| %>
                <%= org.collection_select(:organization_id, Organization.all, :id, :organization_name,{},{:class=>'form-control'}) %>
              <% end %>
            </div>
          </div>
        </div><br>
        <div class="actions form-group">
          <center><ul ><%= submit_tag 'Create', {:class=> 'btn btn-primary btn-lg btn-rounded',:style=> 'color:#FFFFFF;' } %></ul><br>
            <ul><p><%= render "devise/shared/links", :class => "text-center"%></p></ul></center>
        </div>
      <% end %>
    </div>
    <div class="col-md-1 col-sm-1 col-xs-12"></div>
  </div>
</div>

