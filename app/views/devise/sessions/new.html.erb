<div class="container-fluid" id="">
  <div class="col-lg-12">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 ">
      <section id="wrapper" class="login-register">
        <div class="login-box col-lg-12" style="background-color:rgba(138, 245, 234, 0.4);">
          <h1>&nbsp;&nbsp;Login Page</h1><br>
          <center><a><%= image_tag("0.png",style: 'width: 30%;') %></a></center><br>
          <div class="row" >
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="col-lg-1"></div>
              <div class="form-group col-lg-10">
                <div class="form-group" >
                  <%= label :email, 'User_id' %>:
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control", style: 'width: 100%;' %> 
                </div>
                <div class="form-group" >
                  <%= label :password, 'Password' %>:
                  <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control", style: 'width: 100%;'%>
                </div>
                <div class="form-group" >
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end %>
                </div>
                <div class="form-group">
                  <%= link_to " Sign Up",new_registration_path(resource_name),{ :class=> 'pull-left fa fa-sign-in m-r-5',:style=> 'color:blue;'} %>
                  <%= link_to " Forgot Password?",new_password_path(resource_name),{ :class=> 'pull-right fa  fa-lock m-r-5',:style=> 'color:blue;'} %><br>
                  
                </div>
                <div class="form-group text-center" >
                  <%= f.submit_tag 'Submit', {:class=> 'btn btn-primary btn-lg btn-rounded',:style=> 'color:#FFFFFF;' } %>
                </div>
              </div>
              <div class="col-lg-1"></div>
            <% end %>
          </div>
          <div class="form-group text-center">
            <p><%= render "devise/shared/links", :class => "text-center"%></p>
          </div>
        </div>
      </section>
    </div>
    <div class="col-xs-4"></div>
  </div>
</div>

