
<%- if controller_name != 'sessions'  && controller_name != 'registrations' && controller_name != 'confirmations' && controller_name != 'unlocks'%>
  <%= link_to " Log in", new_session_path(resource_name),{ :class=> 'pull-center fa fa-sign-in m-r-5',:style=> 'color:blue;'} %><br/>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' && controller_name != 'passwords' && controller_name != 'sessions' && controller_name != 'confirmations' && controller_name != 'unlocks'%>
  <%= link_to " Sign up", new_registration_path(resource_name),{ :class=> 'pull-center fa fa-sign-in m-r-5',:style=> 'color:blue;'} %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' && controller_name != 'sessions' %>
  <%= link_to " Forgot your password?", new_password_path(resource_name),{:class=> 'fa fa-lock',:style=>'color:#00FFFF;'} %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' && controller_name != 'passwords'%>
  <%= link_to " Didn't receive confirmation instructions?", new_confirmation_path(resource_name),{ :class=> 'pull-center fa fa-check-circle-o m-r-5',:style=> 'color:#00FFFF;'} %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to " Didn't receive unlock instructions?", new_unlock_path(resource_name),{ :class=> 'text-center pull-center fa fa-unlock-alt m-r-5 ',:style=> 'color:#00FFFF;'} %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>


