<%= form_with(url: tasks_create_path(project_id: params[:project_id]), medthod: "post") do |f| %>
  <div class="form-group">
    <%= f.label :task %><br>
    <%= f.text_field :task, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.submit "create", {:class=> 'btn btn-primary btn-lg btn-rounded text-uppercase waves-effect waves-light',:style=> 'color:#FFFFFF;' } %>
  </div>
<% end %>