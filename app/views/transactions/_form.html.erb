<%= form_with(model: @transactions, method: "post",local: true) do |form| %>
	<div class="form-group">
	  <%= form.label :amount %><br>
	  <%= form.number_field :amount , class: "form-control"%>
	</div>
	<div class="form-group">
	  <%= form.submit "Enter", {:class=> 'btn btn-primary btn-lg btn-rounded text-uppercase waves-effect waves-light',:style=> 'color:#FFFFFF;' } %>
	</div>
<%end%>